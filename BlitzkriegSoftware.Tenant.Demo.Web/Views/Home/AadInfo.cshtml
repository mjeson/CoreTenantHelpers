@model System.Security.Claims.ClaimsPrincipal

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="text-left">
    <h1 class="display-4">@ViewData["Title"]</h1>

    <div class="container-fluid">
        <h2>@Localizer["User"]</h2>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Value"]</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Localizer["Name"]</td>
                    <td>@Model.Identity.Name</td>
                </tr>
                <tr>
                    <td>@Localizer["IsAuthenticated"]</td>
                    <td>@Model.Identity.IsAuthenticated</td>
                </tr>
                <tr>
                    <td>@Localizer["AuthenticationType"]</td>
                    <td>@Model.Identity.AuthenticationType</td>
                </tr>
                <tr><td colspan="2"><strong>@Localizer["Claims"]</strong></td></tr>
                @{
                    foreach (var c in Model.Claims)
                    {
                        <tr>
                            <td>@c.Type</td>
                            <td><strong>@c.Value</strong></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
